<ui:FluentWindow x:Class="SurveyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:SurveyApp.Views"
        Title="{Binding Title}"
        Height="720"
        Width="1280"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Grid.ColumnSpan="2"
                     Title="{Binding Title}"
                     ShowMaximize="True"
                     ShowMinimize="True"
                     ShowClose="True" />

        <!-- Navigation Pane -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderThickness="0,0,1,0">
            <ui:NavigationView x:Name="NavigationView"
                               IsPaneOpen="True"
                               SelectionChanged="NavigationView_SelectionChanged"
                               Background="Transparent"
                               IsBackButtonVisible="Collapsed"
                               OpenPaneLength="240">
                <ui:NavigationView.Header>
                    <ui:BreadcrumbBar ItemsSource="{Binding BreadcrumbItems}"
                                      Margin="16,8,16,0" />
                </ui:NavigationView.Header>

                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem x:Name="HomeNavItem"
                                           Content="Home">
                        <ui:NavigationViewItem.Icon>
                            <ui:SymbolIcon Symbol="Home24" />
                        </ui:NavigationViewItem.Icon>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem x:Name="QuestionnairesNavItem"
                                           Content="Questionnaires">
                        <ui:NavigationViewItem.Icon>
                            <ui:SymbolIcon Symbol="DocumentBulletList24" />
                        </ui:NavigationViewItem.Icon>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem x:Name="ResponsesNavItem"
                                           Content="Responses">
                        <ui:NavigationViewItem.Icon>
                            <ui:SymbolIcon Symbol="DataUsage24" />
                        </ui:NavigationViewItem.Icon>
                    </ui:NavigationViewItem>
                </ui:NavigationView.MenuItems>

                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem x:Name="ThemeNavItem"
                                           Content="Toggle Theme">
                        <ui:NavigationViewItem.Icon>
                            <ui:SymbolIcon Symbol="WeatherMoon20" />
                        </ui:NavigationViewItem.Icon>
                    </ui:NavigationViewItem>
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
        </Border>

        <!-- Main Content -->
        <Frame x:Name="ContentFrame"
               Grid.Row="1" Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Margin="16" />
    </Grid>
</ui:FluentWindow>
