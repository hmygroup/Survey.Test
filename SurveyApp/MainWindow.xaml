<Window x:Class="SurveyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="{Binding Title}"
        Height="720"
        Width="1280"
        MinHeight="600"
        MinWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       Margin="16,8">
                <TextBlock Text="ðŸ“‹" 
                          FontSize="24" 
                          VerticalAlignment="Center"
                          Margin="0,0,8,0" />
                <TextBlock Text="{Binding Title}" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"
                          Foreground="White" />
            </StackPanel>

            <Button Grid.Column="1"
                   Command="{Binding ToggleThemeCommand}"
                   Content="{Binding CurrentTheme}"
                   Margin="8"
                   Padding="12,6"
                   ToolTip="Toggle Light/Dark Theme">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" />
                            <TextBlock Text=" Mode" Margin="4,0,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <!-- Main Content with Navigation -->
        <ui:NavigationView Grid.Row="1"
                          x:Name="NavigationView"
                          PaneDisplayMode="Left"
                          IsBackButtonVisible="Collapsed"
                          IsSettingsVisible="True"
                          SelectionChanged="NavigationView_SelectionChanged">
            
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Icon="Home" 
                                      Content="Home" 
                                      Tag="Home" />
                <ui:NavigationViewItemSeparator />
                <ui:NavigationViewItem Content="Questionnaires" 
                                      Tag="Questionnaires">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE8F1;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Responses" 
                                      Tag="Responses">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xE8C3;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" 
                   NavigationUIVisibility="Hidden">
                <Frame.Content>
                    <Grid>
                        <StackPanel VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                            <TextBlock Text="Welcome to Survey Management System" 
                                      FontSize="28" 
                                      FontWeight="SemiBold"
                                      TextAlignment="Center"
                                      Margin="0,0,0,16" />
                            <TextBlock Text="Select an option from the menu to get started" 
                                      FontSize="16" 
                                      TextAlignment="Center"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,32,0,0">
                                <ui:SimpleStackPanel Spacing="8" Margin="0,0,16,0">
                                    <TextBlock Text="ðŸ“Š" FontSize="32" TextAlignment="Center" />
                                    <TextBlock Text="Create Questionnaires" FontWeight="SemiBold" />
                                    <TextBlock Text="Design custom surveys" 
                                             TextAlignment="Center"
                                             Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                </ui:SimpleStackPanel>
                                <ui:SimpleStackPanel Spacing="8" Margin="16,0">
                                    <TextBlock Text="âœï¸" FontSize="32" TextAlignment="Center" />
                                    <TextBlock Text="Collect Responses" FontWeight="SemiBold" />
                                    <TextBlock Text="Gather user feedback" 
                                             TextAlignment="Center"
                                             Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                </ui:SimpleStackPanel>
                                <ui:SimpleStackPanel Spacing="8" Margin="16,0,0,0">
                                    <TextBlock Text="ðŸ“ˆ" FontSize="32" TextAlignment="Center" />
                                    <TextBlock Text="Analyze Results" FontWeight="SemiBold" />
                                    <TextBlock Text="View insights" 
                                             TextAlignment="Center"
                                             Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                </ui:SimpleStackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Frame.Content>
            </Frame>

        </ui:NavigationView>
    </Grid>
</Window>
