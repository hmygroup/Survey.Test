<Page x:Class="SurveyApp.Views.QuestionEditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:SurveyApp.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:QuestionEditorViewModel}"
      d:DesignHeight="700" d:DesignWidth="1200"
      Loaded="Page_Loaded">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                   Command="{Binding NavigateBackCommand}"
                   ToolTip="Back to questionnaires"
                   Margin="0,0,16,0"
                   Padding="8">
                <ui:SymbolIcon Symbol="ArrowLeft20" FontSize="20" />
            </Button>

            <!-- Title -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="✏️ Question Editor" 
                          FontSize="28" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,4" />
                <TextBlock Text="{Binding QuestionaryTitle, StringFormat='Editing: {0}'}" 
                          FontSize="14" 
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center">
                <Button Command="{Binding LoadQuestionsCommand}"
                       ToolTip="Refresh questions"
                       Margin="0,0,8,0"
                       Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="ArrowSync20" FontSize="16" Margin="0,0,8,0" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
                <ui:Button Command="{Binding AddQuestionCommand}"
               ToolTip="Add new question"
               Appearance="Primary"
               Icon="{ui:SymbolIcon Add20}"
               Content="Add Question"
               Padding="12,8" />
            </StackPanel>
        </Grid>

        <!-- Separator -->
        <Border Grid.Row="1" 
               Height="1" 
               Background="{DynamicResource SystemControlForegroundBaseLowBrush}" 
               Margin="0,0,0,16" />

        <!-- Toolbar -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Info Panel -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Info20" FontSize="16" Margin="0,0,8,0" 
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                <TextBlock Text="Drag questions to reorder them" 
                          FontSize="13"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            </StackPanel>

            <!-- Action Buttons for Selected Question -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal">
                <Button Command="{Binding EditQuestionCommand}"
                       IsEnabled="{Binding SelectedQuestion, Converter={StaticResource NullToBooleanConverter}}"
                       ToolTip="Edit selected question"
                       Margin="0,0,8,0"
                       Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Edit20" FontSize="14" Margin="0,0,6,0" />
                        <TextBlock Text="Edit" FontSize="13" />
                    </StackPanel>
                </Button>
                <Button Command="{Binding DeleteQuestionCommand}"
                       IsEnabled="{Binding SelectedQuestion, Converter={StaticResource NullToBooleanConverter}}"
                       ToolTip="Delete selected question"
                       Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Delete20" FontSize="14" Margin="0,0,6,0" />
                        <TextBlock Text="Delete" FontSize="13" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Question List -->
        <Border Grid.Row="3" 
               BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
               BorderThickness="1"
               CornerRadius="4">
            <Grid>
                <!-- Questions ListView -->
                <ListView x:Name="QuestionsListView"
                         ItemsSource="{Binding Questions}"
                         SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}"
                         AllowDrop="True"
                         PreviewMouseLeftButtonDown="QuestionsListView_PreviewMouseLeftButtonDown"
                         PreviewMouseMove="QuestionsListView_PreviewMouseMove"
                         Drop="QuestionsListView_Drop"
                         DragOver="QuestionsListView_DragOver"
                         SelectionMode="Single"
                         Margin="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12,8" 
                                   Background="Transparent"
                                   BorderThickness="0,0,0,1"
                                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Drag Handle -->
                                    <ui:SymbolIcon Grid.Column="0" Symbol="Navigation20" 
                                                FontSize="16" 
                                                Margin="0,0,12,0"
                                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                ToolTip="Drag to reorder" />

                                    <!-- Question Content -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding QuestionText}" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,4" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Type: " 
                                                      FontSize="12"
                                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                            <TextBlock Text="{Binding QuestionType.DotNetType}" 
                                                      FontSize="12"
                                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Constraint Count Badge -->
                                    <Border Grid.Column="2"
                                           Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                           CornerRadius="10"
                                           Padding="8,4"
                                           Margin="12,0,12,0"
                                           ToolTip="Number of constraints"
                                           Visibility="{Binding Constraints.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="CheckmarkCircle20" FontSize="12" Margin="0,0,4,0" Foreground="White" />
                                            <TextBlock Text="{Binding Constraints.Count}" 
                                                      FontSize="12"
                                                      Foreground="White" />
                                        </StackPanel>
                                    </Border>

                                    <!-- ID for reference -->
                                    <TextBlock Grid.Column="3"
                                              Text="{Binding Id, StringFormat='ID: {0:N}'}" 
                                              FontSize="11"
                                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                              VerticalAlignment="Center"
                                              ToolTip="Question ID" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="{Binding Questions.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
                    <ui:SymbolIcon Symbol="DocumentBulletList20" 
                                FontSize="64" 
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16" />
                    <TextBlock Text="No questions yet" 
                              FontSize="18"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8" />
                    <TextBlock Text="Click 'Add Question' to create your first question" 
                              FontSize="14"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="{DynamicResource SystemControlAcrylicWindowBrush}"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ui:ProgressRing Width="60" Height="60"
                                        Margin="0,0,0,16" />
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="14"
                                  HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4"
               Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
               Padding="12,8"
               Margin="0,12,0,0"
               CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Status Icon -->
                <ui:SymbolIcon Grid.Column="0"
                            Symbol="Info20" 
                            FontSize="14" 
                            Margin="0,0,8,0"
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

                <!-- Status Message -->
                <TextBlock Grid.Column="1"
                          Text="{Binding StatusMessage}" 
                          FontSize="12"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

                <!-- Item Count -->
                <TextBlock Grid.Column="2"
                          FontSize="12"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    <Run Text="{Binding Questions.Count, Mode=OneWay}" />
                    <Run Text="question(s)" />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>
