<Page x:Class="SurveyApp.Views.AnswerAnalysisView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:SurveyApp.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:AnswerAnalysisViewModel}"
      d:DesignHeight="700"
      d:DesignWidth="1200"
      Title="Answer Analysis">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Answer Analysis"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="{Binding CurrentQuestionary.Name, FallbackValue='Loading...'}"
                               FontSize="14"
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,4,0,0" />
                </StackPanel>

                <ui:Button Grid.Column="1"
                        Content="â† Back to List"
                        Command="{Binding NavigateBackCommand}"
                        Appearance="Primary"
                        Padding="16,8" />
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1"
                Visibility="{Binding Statistics, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total Answers -->
                <Border Grid.Column="0"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="12"
                        CornerRadius="4"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Total Answers"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="{Binding Statistics.TotalAnswers}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- Completed -->
                <Border Grid.Column="1"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="12"
                        CornerRadius="4"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Completed"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0">
                            <Run Text="{Binding Statistics.CompletedCount, Mode=OneWay}" />
                            <Run Text=" (" FontSize="14" />
                            <Run Text="{Binding Statistics.CompletionRate, StringFormat={}{0:F1}, Mode=OneWay}" FontSize="14" />
                            <Run Text="%" FontSize="14" />
                            <Run Text=")" FontSize="14" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Pending -->
                <Border Grid.Column="2"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="12"
                        CornerRadius="4"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Pending"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="{Binding Statistics.PendingCount}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- Unfinished -->
                <Border Grid.Column="3"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="12"
                        CornerRadius="4"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Unfinished"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="{Binding Statistics.UnfinishedCount}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- Last 24h -->
                <Border Grid.Column="4"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="12"
                        CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Last 24 Hours"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="{Binding Statistics.ResponsesLast24Hours}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="24,16"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Status Filter -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Status"
                               FontSize="12"
                               Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding FilterStatus, Mode=TwoWay}"
                              HorizontalAlignment="Stretch" />
                </StackPanel>

                <!-- User Filter -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="User"
                               FontSize="12"
                               Margin="0,0,0,4" />
                    <ui:TextBox Text="{Binding SearchUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="Filter by user..."
                             HorizontalAlignment="Stretch" />
                </StackPanel>

                <!-- From Date -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="From Date"
                               FontSize="12"
                               Margin="0,0,0,4" />
                    <DatePicker SelectedDate="{Binding FilterFromDate, Mode=TwoWay}"
                                HorizontalAlignment="Stretch" />
                </StackPanel>

                <!-- To Date -->
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,8,0">
                    <TextBlock Text="To Date"
                               FontSize="12"
                               Margin="0,0,0,4" />
                    <DatePicker SelectedDate="{Binding FilterToDate, Mode=TwoWay}"
                                HorizontalAlignment="Stretch" />
                </StackPanel>

                <!-- Filter Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <ui:Button Content="Apply"
                            Command="{Binding ApplyFiltersCommand}"
                            Appearance="Primary"
                            Padding="24,8"
                            Margin="0,0,8,0" />
                    <Button Content="Clear"
                            Command="{Binding ClearFiltersCommand}"
                            Padding="24,8" />
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,8,0,0" />
            </Grid>
        </Border>

        <!-- Answers Grid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Answers}"
                  SelectedItem="{Binding SelectedAnswer, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  CanUserSortColumns="True"
                  CanUserResizeColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Margin="24,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User"
                                    Binding="{Binding User}"
                                    Width="200" />
                <DataGridTextColumn Header="Card ID"
                                    Binding="{Binding CardId}"
                                    Width="100" />
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding AnswerStatus.AnswerStatus}"
                                    Width="120" />
                <DataGridTextColumn Header="Created At"
                                    Binding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                    Width="150" />
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View Details"
                                    Command="{Binding DataContext.ViewAnswerDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    Padding="8,4"
                                    FontSize="11" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer with Pagination and Actions -->
        <Border Grid.Row="4"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="â†» Refresh"
                            Command="{Binding RefreshCommand}"
                            Padding="16,8"
                            Margin="0,0,8,0" />
                    <ui:Button Content="ðŸ“Š Export to CSV"
                            Command="{Binding ExportToCsvCommand}"
                            Appearance="Primary"
                            Padding="16,8" />
                </StackPanel>

                <!-- Pagination Info -->
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    <Run Text="Page" />
                    <Run Text="{Binding CurrentPage, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text="of" />
                    <Run Text="{Binding TotalPages, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text="(" />
                    <Run Text="{Binding TotalCount, Mode=OneWay}" />
                    <Run Text="total)" />
                </TextBlock>

                <!-- Pagination Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="â† Previous"
                            Command="{Binding PreviousPageCommand}"
                            Padding="16,8"
                            Margin="0,0,8,0" />
                    <ui:Button Content="Next â†’"
                            Command="{Binding NextPageCommand}"
                            Appearance="Primary"
                            Padding="16,8" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0"
                Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ui:ProgressRing Width="64"
                                 Height="64" />
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
