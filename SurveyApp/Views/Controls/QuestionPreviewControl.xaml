<UserControl x:Class="SurveyApp.Views.Controls.QuestionPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="16">
        <StackPanel>
            <!-- Header -->
            <TextBlock FontWeight="SemiBold" 
                      FontSize="14"
                      Margin="0,0,0,12">
                <Run Text="ðŸ“‹" />
                <Run Text="Preview" />
            </TextBlock>

            <!-- Question Text Preview -->
            <TextBlock x:Name="PreviewQuestionText"
                      Text="Your question will appear here..."
                      TextWrapping="Wrap"
                      FontSize="13"
                      Margin="0,0,0,12"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

            <!-- Type Description -->
            <TextBlock x:Name="PreviewTypeDescription"
                      Text="Select a question type to see the preview"
                      FontSize="11"
                      FontStyle="Italic"
                      Margin="0,0,0,12"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

            <!-- Dynamic Editor Preview -->
            <Border x:Name="PreviewEditorContainer"
                   Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1"
                   CornerRadius="2"
                   Padding="8"
                   MinHeight="40">
                <ContentPresenter x:Name="PreviewEditorPresenter" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>
